<h1>Book Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= truncate(book.body, length: 50) %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>New Book</h1>

<%= form_with model: @book, local: true do |form| %>
  <div class="field">
    <%= form.label :Title %>
    </br>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :Body %>
    </br>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit :'Create Book'%>
  </div>
<% end %>
